{
  "name": "machikore",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "mobile": "npm run --workspace=apps/mobile",
    "admin": "npm run --workspace=apps/admin",
    "web": "npm run --workspace=apps/web",
    "dev:mobile": "npm run dev --workspace=apps/mobile",
    "dev:admin": "npm run dev --workspace=apps/admin",
    "dev:web": "npm run dev --workspace=apps/web",
    "build:tokens": "pnpm --filter @machikore/design-tokens build",
    "storybook": "pnpm --filter @machikore/storybook storybook"
  },
  "overrides": {
    "react-test-renderer": "19.1.2"
  },
  "devDependencies": {
    "@types/sharp": "^0.32.0",
    "lightningcss-darwin-arm64": "^1.30.2",
    "sharp": "^0.34.5"
  }
}
