{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/app/*": [
        "./src/app/*"
      ],
      "@/pages/*": [
        "./src/pages/*"
      ],
      "@/widgets/*": [
        "./src/widgets/*"
      ],
      "@/features/*": [
        "./src/features/*"
      ],
      "@/entities/*": [
        "./src/entities/*"
      ],
      "@/shared/*": [
        "./src/shared/*"
      ],
      "@assets/*": [
        "./assets/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "supabase/functions/**",
    "scripts/**"
  ]
}